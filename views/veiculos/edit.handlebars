<h1>Edit Veiculos {{veiculo.nome}}</h1>

<div class="back_view">
  <form action="/veiculos/edit" method="post" class="row m-3">

    <div class="row align-items-start">
      <input type="hidden" name="id" value="{{veiculo.id}}" />
      <div class="col-md-6">
        <label for="nome" class="form-label">Nome:</label>
        <input type="text" name="nome" value="{{veiculo.nome}}" class="form-control" />
      </div>
    </div>

    <div class="row align-items-start">
      <div class="col-md-4">
        <label for="modelo" class="form-label">Modelo:</label>
        <input type="text" name="modelo" value="{{veiculo.modelo}}" class="form-control" />
      </div>
    </div>

    <div class="row align-items-start">
      <div class="col-md-4">
        <label for="motor" class="form-label">Motor:</label>
        <input type="text" name="motor" value="{{veiculo.motor}}" class="form-control" />
      </div>
    </div>

    <div class="row align-items-start">
      <div class="col-md-4">
        <label for="ano" class="form-label">Ano:</label>
        <input type="text" name="ano" value="{{veiculo.ano}}" class="form-control" />
      </div>
    </div>

    <div class="row align-items-start">
      <div class="col-md-4">
        <label for="fabricante" class="form-label">Fabricante:</label>
        <input type="text" name="fabricante" value="{{veiculo.fabricante}}" class="form-control" />
      </div>
    </div>

    <div class="row align-items-start">
      <div class="col-md-4">
        <label for="valor" class="form-label">Valor:</label>
        <input type="text" name="valor" value="{{veiculo.valor}}" class="form-control" />
      </div>
    </div>

    <div class="row align-items-start">
      <div class="col-md-4">
        <label for="cor" class="form-label">Cor:</label>
        <input type="text" name="cor" value="{{veiculo.cor}}" class="form-control" />
      </div>
    </div> 

    <div class="row align-items-start">
      <div class="col-md-4">
        <label for="opcional" class="form-label">Opcionais:</label>
        <input type="text" name="opcional" value="{{veiculo.opcional}}" class="form-control" />
      </div>
    </div>
    <div class="col-sm-2">
      <input type="submit" value="Atualizar" />
    </div>
